#:kivy 1.0.9

WindowManager:
    HomeScreen:
    NewGameScreen:
    LoadGameScreen:

<HomeScreen>
    name: "home"
    FloatLayout:
        Label: 
            text: "Clue Solver"
            font_size: '50sp'
            size_hint: (1, 0.5)
            pos_hint: {"x": 0.0, "y": 0.5}
        Button:
            text: "Start New Game"
            size_hint: (0.25, 0.25)
            pos_hint: {"x":0.125, "y":0.25}
            on_release: 
                app.root.current = "new"
                root.manager.transition.direction = "left"
        Button:
            text: "Load Previous Game"      
            size_hint: (0.25, 0.25)
            pos_hint: {"x":0.625, "y":0.25}            
            on_release: 
                app.root.current = "load"
                root.manager.transition.direction = "left"


<NewGameScreen>
    name: "new"
    canvas.before:
        Color: 
            rgba: 0, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Button:
            text: "Go Back"
            background_color: 0, 1, 0.2, 1
            font_size: '10sp'
            size_hint: (0.0625, 0.0625)
            pos_hint: {"x":0.0625 / 2, "y":1 - 1.5 * 0.0625}
            on_release: 
                app.root.current = "home"
                root.manager.transition.direction = "right"
        Label:
            id: whatCharacter
            text: "What character are you playing as?"
            text_color: 1, 1, 0, 1
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: (0.8, 0.2)
            pos_hint: {"x": 0.1, "y": 0.7}
        
        ##############################################################    Character Selection    ##############################################################

        #:set nameLabelSizeX 0.1
