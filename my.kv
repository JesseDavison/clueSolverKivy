        Label:
            id: scarlett_label
            text: "Scarlett"
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: (nameLabelSizeX, nameLabelSizeY)
            pos_hint: {"x": pos_hint_x, "y": pos_hint_y - pos_hint_y_interval * 0}
        CheckBox:
            id: scarlett_checkBox
            group: "character_selection"
            text: "scarlett checkbox text"
            canvas.before:
