#:kivy 1.0.9

WindowManager:
    HomeScreen:
    NewGameScreen:
    LoadGameScreen:

<HomeScreen>
    name: "home"
    FloatLayout:
        Label: 
            text: "Clue Solver"
            font_size: '50sp'
            size_hint: (1, 0.5)
            pos_hint: {"x": 0.0, "y": 0.5}
        Button:
            text: "Start New Game"
            size_hint: (0.25, 0.25)
            pos_hint: {"x":0.125, "y":0.25}
            on_release: 
                app.root.current = "new"
                root.manager.transition.direction = "left"
        Button:
            text: "Load Previous Game"      
            size_hint: (0.25, 0.25)
            pos_hint: {"x":0.625, "y":0.25}            

<NewGameScreen>
    name: "new"
    FloatLayout:
        Button:
            text: "Go Back"
            font_size: '10sp'
            size_hint: (0.0625, 0.0625)
            pos_hint: {"x":0.0625 / 2, "y":1 - 1.5 * 0.0625}
            on_release: 
                app.root.current = "home"
                root.manager.transition.direction = "right"



<LoadGameScreen>
    name: "load"
    FloatLayout:
        Button:
            text: "Go Back"
            font_size: '10sp'
            size_hint: (0.0625, 0.0625)
            pos_hint: {"x":0.0625 / 2, "y":1 - 1.5 * 0.0625}
            on_release: 
                app.root.current = "home"
                root.manager.transition.direction = "right"






